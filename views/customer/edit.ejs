<form action="/customer/update/<%= customer.id %>" method="post">

  <h2>Update a Customer</h2>

  <input type="text" placeholder="Name" name="name" value="<%= customer.name %>" />
  <br>
  <br>
  <input type="text" placeholder="Email" name="email" value="<%= customer.email %>" />
  <br>
  <br>
  <input type="text" placeholder="State" name="state" value="<%= customer.state %>" />
  <br>
  <br>

  <input type="submit" value="Edit Customer" />

</form>
